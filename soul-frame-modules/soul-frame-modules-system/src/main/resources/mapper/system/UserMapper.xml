<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clm.modules.system.mapper.UserMapper">

    <sql id="selectSql">
        SELECT
        user_id, dept_id, user_name, nick_name, user_type, email, phone,
        sex, avatar, password, status, login_ip, login_date,create_time
        FROM sys_user
        <where>
            <if test="param != null">
                <if test="param.userName != null and param.userName != ''">
                    AND user_name LIKE CONCAT('%', #{param.userName}, '%')
                </if>
                <if test="param.nickName != null and param.nickName != ''">
                    AND nick_name LIKE CONCAT('%', #{param.nickName}, '%')
                </if>
                <if test="param.phone != null and param.phone != ''">
                    AND phone LIKE CONCAT('%', #{param.phone}, '%')
                </if>
                <if test="param.status != null and param.status != ''">
                    AND status = #{param.status}
                </if>
                <if test="param.deptId != null">
                    AND dept_id = #{param.deptId}
                </if>
                <if test="param.deptIds!=null and param.deptIds.size() > 0">
                    AND dept_id IN
                    <foreach item="item" collection="param.deptIds" separator="," open="(" close=")" index="">
                        #{item}
                    </foreach>
                </if>
            </if>
            AND del_flag = '0'
        </where>
        ORDER BY create_time ASC
    </sql>

    <select id="selectUserPage" resultType="com.clm.modules.system.domain.vo.UserPageVO">
        <include refid="selectSql"/>
    </select>

    <select id="selectUserById" resultType="com.clm.modules.system.domain.vo.UserVO">
        SELECT
            user_id, dept_id, user_name, nick_name, user_type, email, phone,
            sex, avatar, password, status, login_ip, login_date,create_time
        FROM sys_user
        WHERE user_id = #{userId}
        AND del_flag = '0'
    </select>
    <select id="selectSelectUserList" resultType="com.clm.modules.system.domain.vo.UserSelectVO">
        SELECT
        user_id, user_name, nick_name, email, phone
        FROM sys_user
        <where>
            del_flag = '0'
            <if test="param != null">
                <if test="param.userName != null and param.userName != ''">
                    AND user_name LIKE CONCAT('%', #{param.userName}, '%')
                </if>
                <if test="param.nickName != null and param.nickName != ''">
                    AND nick_name LIKE CONCAT('%', #{param.nickName}, '%')
                </if>
                <if test="param.phone != null and param.phone != ''">
                    AND phone LIKE CONCAT('%', #{param.phone}, '%')
                </if>
                <if test="param.status != null and param.status != ''">
                    AND status = #{param.status}
                </if>
                <if test="param.deptId != null">
                    AND dept_id = #{param.deptId}
                </if>
            </if>
        </where>

    </select>
</mapper>

